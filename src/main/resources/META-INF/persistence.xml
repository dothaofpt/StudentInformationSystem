<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">
  <persistence-unit name="enterpriseApplicationPU" transaction-type="JTA">
    <jta-data-source>jdbc/enterprise_application</jta-data-source>
    <class>org.example.studentinformationsystem.entity.Student</class>
    <class>org.example.studentinformationsystem.entity.Subject</class>
    <class>org.example.studentinformationsystem.entity.StudentScore</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="validate"/>
    </properties>
  </persistence-unit>
</persistence>